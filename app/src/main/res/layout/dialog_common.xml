<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_30"
    android:background="@drawable/shape_white_background_5"
    android:minHeight="@dimen/dp_120"
    android:orientation="vertical">

    <TextView
        android:id="@+id/common_dialog_title_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5" />

    <TextView
        android:id="@+id/common_dialog_detail_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/dp_12"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:text="您已被管理员禁言"
        android:textColor="@color/black_deep"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/common_dialog_positive_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/dp_12"
            android:text="私聊他"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/dp_12" />


    </LinearLayout>


</LinearLayout>